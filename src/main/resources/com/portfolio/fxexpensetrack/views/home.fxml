<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" stylesheets="@/styles/table-column.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.portfolio.fxexpensetrack.controllers.HomeController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Tables">
                  <items>
                    <MenuItem fx:id="itemExpensesTable" mnemonicParsing="false" text="Expenses Table" />
                    <MenuItem fx:id="itemIncomeTable" mnemonicParsing="false" text="Income Table" />
                    <MenuItem fx:id="itemGeneralTable" mnemonicParsing="false" text="General Table" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <FlowPane alignment="CENTER" hgap="20.0" nodeOrientation="LEFT_TO_RIGHT" vgap="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="lbExpenses" text="Label" />
                  <Label fx:id="lbIncomes" layoutX="10.0" layoutY="14.0" text="Label" />
                  <Label fx:id="lbBalance" layoutX="90.0" layoutY="14.0" text="Label" />
                  <Button fx:id="btnConfirm" mnemonicParsing="false" text="Add New" />
                  <ComboBox fx:id="cbTableValuesFilter"/>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </FlowPane>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tableValues" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colID" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colType" prefWidth="75.0" text="Type" styleClass="table-cell-center"/>
            <TableColumn fx:id="colDescription" prefWidth="75.0" text="Description" />
            <TableColumn fx:id="colDate" prefWidth="75.0" styleClass="table-cell-center" text="Date" />
            <TableColumn fx:id="colAmount" prefWidth="75.0" styleClass="table-cell-right" text="Amount" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
